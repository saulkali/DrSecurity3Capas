
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/bundle/cssCustom")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="body d-md-flex align-items-center justify-content-between">
            <div class="box-1 mt-md-0 mt-5">
                <img src="https://img.lovepik.com/background/20211101/medium/lovepik-security-technology-mobile-phone-wallpaper-background-image_400507494.jpg"
                     class="" alt="" />

            </div>

            <!-- Login -->
            <div id="containerLogin" style="background-color:white;" class=" box-2 d-flex flex-column h-100">
                <form method="post" action="@Url.Action("Login", "Login")">
                    <div class="mt-5">
                        <p class="mb-1 h-1">Iniciar Sesion...</p>
                        <p class="text-muted mb-2">Ingrese sus credenciales.</p>
                        @{

                            if (TempData["mensaje"] != null)
                            {

                                <div class="alert alert-danger" role="alert">
                                    @TempData["mensaje"];
                                </div>
                            }

                        }
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text fas fa-envelope" id="basic-addon1"></span>
                            </div>
                            <input type="email" name="email" class="form-control" placeholder="Correo" aria-label="Username" aria-describedby="basic-addon1" required>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text fas fa-lock" id="basic-addon1"></span>
                            </div>
                            <input type="password" name="password" class="form-control" placeholder="Contrasena" aria-label="Username" aria-describedby="basic-addon1" required>

                        </div>
                        @*<div class="input-group mb-3">*@ @*le cambie la clase*@
                          <div class="d-flex justify-content-center mt-3 login_container">
                            <input type="submit" class="btn btn-success btn-block" value="Entrar" />
                          </div>
                    </div>


                </form>

                @*@Html.ActionLink("Registrarse", "Index", "Registrar", null, htmlAttributes: new { @class = "btn btn-warning" })*@

                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        No tienes cuenta? <a href="@Url.Action("Index","Registrar")" class="ml-2">Registrate</a>
                    </div>
                </div>
  
                <div class="mt-auto">
                    <p class="footer text-muted mb-0 mt-md-0 mt-4">
                        Al registrarse aceptas los
                        <span class="p-color me-1">Terminos y Condiciones</span>y las
                        <span class="p-color ms-1">Politicas de privacidad</span>
                    </p>
                </div>
            </div>
                <span class="fas fa-times"></span>
            </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
</body>
</html>
